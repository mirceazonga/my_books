<div id="page-content">
  <h1 class="text-center mt-4">Create a new book</h1>

  <%= form_with(model: @my_book, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, @categories, :id, :name, include_blank: 'Select a category' %>
    </div>

    <div class="actions">
      <%= form.submit 'Create' %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Back to my books", my_books_path %>
</div>
